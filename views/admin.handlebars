<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css"/>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Admin</title>
</head>
<body>
    <nav>
        <h1 class="title">Admin</h1>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/orders">Orders</a></li>
        </ul>
    </nav>

    {{!-- <i class='bx bx-edit-alt'></i> --}}

    <div class="content">
        <div class="banner"></div>
        <button onclick="document.getElementById('adminPanel').style.display = 'block';">Add Service</button>
        <div class="services_container">
            {{#each services}}
            <div class="service" onclick="openServicePanelAdmin('{{service_id}}', '{{service_name}}', '{{service_description}}', '{{service_img}}', '{{service_price}}')">
                <img src="{{service_img}}" alt="{{service_img}}" class="service_image">
                <p class="service_name">{{service_name}}</p>
                <p class="service_description">{{service_description}}</p>
                <p>{{service_id}}</p>
                <i class='bx bx-edit-alt'></i>
            </div>
            {{/each}}
        </div>
    </div>

    <div id="servicePanel" class="panel">
        <div class="panel_content">
            <div class="close_btn">
                <i class='bx bx-x-circle' onclick="document.getElementById('servicePanel').style.display = 'none';"></i>
            </div>
            <div class="pannel_service_img"> 
                <img id="panelServiceImage">
            </div>
            <h3 id="panelServiceName"></h3>
            <p id="panelServiceDescription"></p>
            <p id="panelServicePrice"></p>
            <p id="panelServiceId"></p>
            <button class="option_schedule" onclick="openEditPanel()">Edit</button>
            <button class="option_print" onclick="deleteService()">Delete</button>
        </div>
    </div>

    <div id="adminPanel" class="panel">
        <div class="panel_content">
            <div class="close_btn">
                <i class='bx bx-x-circle' onclick="document.getElementById('adminPanel').style.display = 'none';"></i>
            </div>
            <h3>Add New Service</h3>
            <form id="addServiceForm" onsubmit="addService(event)" enctype="multipart/form-data">
                <label for="serviceName">Name:</label>
                <input type="text" id="serviceName" name="serviceName" required>
                <label for="serviceDescription">Description:</label>
                <textarea id="serviceDescription" name="serviceDescription" required></textarea>
                <label for="servicePrice">Price:</label>
                <input type="number" id="servicePrice" name="servicePrice" required>
                <label for="serviceImage">Image:</label>
                <input type="file" id="serviceImage" name="serviceImage" accept="image/*" required>
                <button type="submit">Add Service</button>
            </form>
        </div>
    </div>

    <div id="editPanel" class="panel">
        <div class="panel_content">
            <div class="close_btn">
                <i class='bx bx-x-circle' onclick="document.getElementById('editPanel').style.display = 'none';"></i>
            </div>
            <h3>Edit Service</h3>
            <form id="editServiceForm" onsubmit="editService(event)" enctype="multipart/form-data">
                <input type="hidden" id="editServiceId" name="serviceId">
                <label for="editServiceName">Name:</label>
                <input type="text" id="editServiceName" name="serviceName">
                <label for="editServiceDescription">Description:</label>
                <textarea id="editServiceDescription" name="serviceDescription"></textarea>
                <label for="editServicePrice">Price:</label>
                <input type="number" id="editServicePrice" name="servicePrice">
                <label for="editServiceImage">Image:</label>
                <input type="file" id="editServiceImage" name="serviceImage" accept="image/*">
                <button type="submit">Save Changes</button>
            </form>
        </div>
    </div>

    <script src="js/script.js"></script>
</body>
</html>