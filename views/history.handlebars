<nav>
    <div class="nav-container">
        <h1 class="title">History</h1>
        <input type="text" id="searchBar" placeholder="Search history..." onkeyup="filterHistory()">
    </div>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/admin">Admin</a></li>
        <li><a href="/orders">Orders</a></li>
        <li><a href="/history">History</a></li>
    </ul>
</nav>
<br><br><br><br><br><br><br>

<div id="historyContainer">
    {{#each history}}
    <div class="orders" onclick="openHistoryModal({{order_id}})">
        <div><h3>#{{order_id}}</h3></div>
        <div><p>{{order_name}}</p></div>
        <div><p>{{order_date}}</p></div>
        <div><p>{{order_mode}}</p></div>
    </div>
    {{/each}}
</div>

<div class="modal" id="historyModal">
    <div class="modal_container">
        <div class="modal_content">
            <div class="close_btn">
                <i class='bx bx-x-circle' onclick="closeHistoryModal()"></i>
            </div>
            <h3 id="historyReferenceId"></h3>
            <p><strong>Service Name:</strong> <span id="historyName"></span></p>
            <p><strong>Date:</strong> <span id="historyOrderDate"></span></p>
            <p><strong>Customer Name:</strong> <span id="historyCustomerName"></span></p>
            <p><strong>Contact:</strong> <span id="historyCustomerContact"></span></p>
            <p><strong>Mode:</strong> <span id="historyOrderMode"></span></p>
            <p><strong>File:</strong> <span id="historyOrderFile"></span></p>
            <p><strong>Message:</strong> <span id="historyOrderMessage"></span></p>
        </div>
    </div>
</div>
<script src="js/history.js"></script>